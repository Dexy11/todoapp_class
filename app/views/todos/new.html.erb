<h2>Create a new Todo</h2>

<%= form_for @todo do |f| %>
   <p>
        <%= f.label :name, "Name" %><br>
        <%= f.text_field :name %>
   </p>

   <p>
    <%= f.label :description, "Description" %><br>
    <%= f.text_area :description %>
   </p>

   <p>
   <%= f.label :time, "Time" %><br>
    <%= f.text_field :time %>
   </p>

   <p>
   <%= f.submit "Create Todo"%>
   </p>
    
<% end %>

